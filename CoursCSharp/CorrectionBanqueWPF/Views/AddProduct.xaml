<Window x:Class="CorrectionBanqueWPF.Views.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorrectionBanqueWPF.Views"
        mc:Ignorable="d"
        Title="AddProduct" Height="411.776" Width="377.799">
    <Grid>
        <Label Content="Titre : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="72,10,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" Width="280"/>
        <Label Content="Prix : " HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="72,49,0,0" TextWrapping="Wrap" Text="{Binding Price}" VerticalAlignment="Top" Width="280"/>
        <Label Content="{Binding Result}" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="342"/>
        <Button Content="Ajouter produit" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="342" Height="25" Click="SaveProduct_Click"/>

    </Grid>
</Window>
