
@{
    ViewData["Title"] = "Formulaire";
}

<h1>Formulaire</h1>
<form asp-controller="AppUser" asp-action="PostFormulaire" method="post">
    <div class="row">
        <label for="nom" class="col-2">Nom</label>
        <input type="text" class="form-control col" name="Nom" placeholder="Votre nom" />
    </div>
    <div class="row">
        <label for="nom" class="col-2">Prénom</label>
        <input type="text" class="form-control col" name="Prenom" placeholder="Votre prénom" />
