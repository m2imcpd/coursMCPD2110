@model List<Cart>
<h1>Liste Paniers</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Cart c in Model) {
        <tr>
            <th scope="col">@c.Id</th>
            <th scope="col">@c.Customer.FirstName</th>
            <th scope="col">@c.Customer.LastName</th>
            <th scope="col">@c.Total €</th>
        </tr>
          @foreach(CartProduct cp in c.Products)
          {
        <tr>
            <th scope="col">@cp.Product.Title</th>
            <th scope="col">@cp.Product.Price €</th>
            <th scope="col">@cp.Qty</th>
        </tr>
          }
        }
    </tbody>
</table>

