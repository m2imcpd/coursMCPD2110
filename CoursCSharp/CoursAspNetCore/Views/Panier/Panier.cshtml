@model Cart
@{
    ViewData["Title"] = "Panier";
}

<h1>Panier</h1>
<table class="table">
    <thead>
        <tr>
            
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Qty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CartProduct p in Model.Products)
        {
            <tr>
               
                <th>@p.Product.Title</th>
                <th>@p.Product.Price €</th>
                <th scope="col">@p.Qty</th>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col">
        Total : @Model.Total €
    </div>
</div>