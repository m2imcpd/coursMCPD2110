@model List<Annonce>;

@if(Model.Count > 0)
{
    @foreach(Annonce a in Model)
    {
        <section class="row annonce">
            <div class="col-3">
                <img src="@a.Image" />
            </div>
            <div class="col-9">
                <div class="row">
                    <h1 class="col-9">@a.Titre</h1>
                    <span class="col-3">@a.Categorie</span>
                </div>
                <div class="row">
                    <div class="col-12">
                        @a.Description
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">@a.Prix</div>
                </div>
            </div>
        </section>
    }
}